{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types/", "./typings"]
	},
	"include": ["src/**/*.ts", "src/**/*.vue", "typings/*.d.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
